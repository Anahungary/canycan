// src/pages/articulos/index.astro - P√ÅGINA PRINCIPAL DE ART√çCULOS REVISADA
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/ui/Container.astro';
import ArticleList from '../../components/blog/ArticleList.astro';
import Button from '../../components/ui/Button.astro';
import Badge from '../../components/ui/Badge.astro';
import { Image } from 'astro:assets';

// üîç CARGAR ART√çCULOS REALES DEL CMS
let allArticles: any[] = [];
try {
  allArticles = await getCollection('articulos');
  allArticles = allArticles
    .filter((article: any) => article.data.status === 'published')
    .sort((a: any, b: any) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
  
  console.log(`üì∞ Cargados ${allArticles.length} art√≠culos publicados`);
} catch (error) {
  console.log('‚ö†Ô∏è No se pudieron cargar los art√≠culos:', error);
  allArticles = [];
}

// üìä CONFIGURACI√ìN DE PAGINACI√ìN
const ARTICLES_PER_PAGE = 9;
const firstPageArticles = allArticles.slice(0, ARTICLES_PER_PAGE);
const totalPages = Math.ceil(allArticles.length / ARTICLES_PER_PAGE);

// üéØ ART√çCULO DESTACADO (el m√°s reciente)
const featuredArticle = allArticles[0] || null;
const otherArticles = allArticles.slice(1, ARTICLES_PER_PAGE);

// üìà ESTAD√çSTICAS PARA MOSTRAR
const stats = {
  total: allArticles.length,
  categories: [...new Set(allArticles.map(article => article.data.category))].length,
  authors: [...new Set(allArticles.map(article => article.data.author))].length,
  readingTime: Math.round(allArticles.reduce((sum, article) => sum + (article.data.readingTime || 5), 0) / allArticles.length)
};

// üè∑Ô∏è CATEGOR√çAS PRINCIPALES
const categories = [
  { name: 'Entrenamiento', slug: 'entrenamiento', color: 'blue', icon: 'üéØ' },
  { name: 'Alimentaci√≥n', slug: 'alimentacion', color: 'green', icon: 'üçΩÔ∏è' },
  { name: 'Salud', slug: 'salud', color: 'red', icon: 'üè•' },
  { name: 'Comportamiento', slug: 'comportamiento', color: 'purple', icon: 'üß†' },
  { name: 'Cachorros', slug: 'cachorros', color: 'yellow', icon: 'üê∂' },
  { name: 'Cuidado', slug: 'cuidado', color: 'teal', icon: 'üíö' }
];

// Funciones utilitarias
const formatDate = (date: string | Date) => {
  return new Date(date).toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'short',
    year: 'numeric'
  });
};

const getTimeAgo = (date: string | Date) => {
  const now = new Date();
  const articleDate = new Date(date);
  const diffInHours = Math.floor((now.getTime() - articleDate.getTime()) / (1000 * 60 * 60));
  
  if (diffInHours < 24) {
    return `hace ${diffInHours}h`;
  } else if (diffInHours < 24 * 7) {
    return `hace ${Math.floor(diffInHours / 24)}d`;
  } else {
    return formatDate(date);
  }
};

// üé® FUNCI√ìN PARA OBTENER COLORES DE CATEGOR√çAS - PALETA VIBRANTE
const getCategoryColor = (category: string) => {
  const colorMap: Record<string, string> = {
    'Entrenamiento': 'bg-green-100 text-green-800 border-green-300 hover:bg-green-200',
    'Alimentaci√≥n': 'bg-yellow-100 text-yellow-800 border-yellow-300 hover:bg-yellow-200',
    'Salud': 'bg-red-100 text-red-800 border-red-300 hover:bg-red-200',
    'Comportamiento': 'bg-blue-100 text-blue-800 border-blue-300 hover:bg-blue-200',
    'Cachorros': 'bg-orange-100 text-orange-800 border-orange-300 hover:bg-orange-200',
    'Cuidado': 'bg-emerald-100 text-emerald-800 border-emerald-300 hover:bg-emerald-200',
    'default': 'bg-gray-100 text-gray-800 border-gray-300 hover:bg-gray-200'
  };
  return colorMap[category] || colorMap.default;
};
---

<BaseLayout 
  title="Art√≠culos de Cuidado de Mascotas | Balto"
  description="Descubre consejos expertos sobre entrenamiento, alimentaci√≥n, salud y cuidado de perros y gatos. Art√≠culos profesionales para amantes de las mascotas."
>
  <Container class="py-8">
    
    {/* üìä HEADER CON ESTAD√çSTICAS */}
    <div class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Centro de Conocimiento de Balto
      </h1>
      <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
        Art√≠culos profesionales sobre cuidado, entrenamiento y bienestar de tus mascotas, 
        escritos por expertos veterinarios y especialistas en comportamiento animal.
      </p>
      
      {/* Estad√≠sticas con colores vibrantes */}
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-2xl mx-auto">
        <div class="bg-white rounded-lg p-4 border-2 border-green-500 shadow-md hover:shadow-lg transition-shadow">
          <div class="text-2xl font-bold text-green-600">{stats.total}</div>
          <div class="text-sm text-gray-600">Art√≠culos</div>
        </div>
        <div class="bg-white rounded-lg p-4 border-2 border-yellow-500 shadow-md hover:shadow-lg transition-shadow">
          <div class="text-2xl font-bold text-yellow-600">{stats.categories}</div>
          <div class="text-sm text-gray-600">Categor√≠as</div>
        </div>
        <div class="bg-white rounded-lg p-4 border-2 border-green-600 shadow-md hover:shadow-lg transition-shadow">
          <div class="text-2xl font-bold text-green-700">{stats.authors}</div>
          <div class="text-sm text-gray-600">Autores</div>
        </div>
        <div class="bg-white rounded-lg p-4 border-2 border-yellow-600 shadow-md hover:shadow-lg transition-shadow">
          <div class="text-2xl font-bold text-yellow-700">{stats.readingTime}min</div>
          <div class="text-sm text-gray-600">Promedio</div>
        </div>
      </div>
    </div>

    {/* üè∑Ô∏è CATEGOR√çAS R√ÅPIDAS */}
    <section class="mb-12">
      <h2 class="text-xl font-bold text-gray-900 mb-6 text-center">Explora por Categor√≠as</h2>
      <div class="flex flex-wrap justify-center gap-3">
        {categories.map((category) => (
          <a 
            href={`/etiquetas/${category.slug}`}
            class={`inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-bold border-2 transition-all hover:shadow-lg hover:scale-105 ${getCategoryColor(category.name)}`}
          >
            <span>{category.icon}</span>
            <span>{category.name}</span>
          </a>
        ))}
      </div>
    </section>

    {allArticles.length > 0 ? (
      <div class="space-y-12">
        
        {/* üåü ART√çCULO DESTACADO */}
        {featuredArticle && (
          <section class="mb-12">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-2xl font-bold text-gray-900">Art√≠culo Destacado</h2>
              <Badge variant="secondary" class="bg-gradient-to-r from-yellow-500 to-yellow-600 text-white font-bold shadow-md">
                ‚≠ê M√°s reciente
              </Badge>
            </div>
            
            <a href={`/articulos/${featuredArticle.slug}`} class="block group">
              <article class="grid grid-cols-1 lg:grid-cols-2 gap-8 bg-white rounded-2xl overflow-hidden shadow-xl border-2 border-green-500 hover:shadow-2xl hover:border-green-600 transition-all duration-300">
                <div class="aspect-[16/10] lg:aspect-[4/3] overflow-hidden">
                  <Image 
                    src={featuredArticle.data.image || '/images/articles/default.jpg'} 
                    alt={featuredArticle.data.title}
                    width={600}
                    height={400}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
                
                <div class="p-6 lg:p-8 flex flex-col justify-center">
                  <div class="mb-4">
                    <span class={`inline-block px-4 py-2 rounded-full text-sm font-bold border-2 shadow-md ${getCategoryColor(featuredArticle.data.category)}`}>
                      {featuredArticle.data.category}
                    </span>
                  </div>
                  
                  <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4 leading-tight group-hover:text-green-600 transition-colors">
                    {featuredArticle.data.title}
                  </h3>
                  
                  <p class="text-gray-600 mb-6 text-lg leading-relaxed">
                    {featuredArticle.data.description}
                  </p>
                  
                  <div class="flex items-center justify-between text-sm text-gray-500">
                    <div class="flex items-center gap-4">
                      <span>üë§ {featuredArticle.data.author}</span>
                      <span>üìÖ {formatDate(featuredArticle.data.date)}</span>
                    </div>
                    <span class="bg-gradient-to-r from-green-500 to-green-600 text-white px-3 py-1 rounded-full font-bold shadow-md">
                      üïí {featuredArticle.data.readingTime || 5} min
                    </span>
                  </div>
                </div>
              </article>
            </a>
          </section>
        )}

        {/* üì∞ GRID DE ART√çCULOS */}
        {otherArticles.length > 0 && (
          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-8">√öltimos Art√≠culos</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {otherArticles.map((article) => (
                <a href={`/articulos/${article.slug}`} class="block group">
                  <article class="bg-white rounded-xl overflow-hidden shadow-lg border-2 border-gray-200 hover:shadow-xl hover:border-green-500 transition-all duration-300 hover:scale-[1.02]">
                    <div class="aspect-[16/10] overflow-hidden">
                      <Image 
                        src={article.data.image || '/images/articles/default.jpg'} 
                        alt={article.data.title}
                        width={400}
                        height={250}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                    </div>
                    
                    <div class="p-6">
                      <div class="flex items-center justify-between mb-3">
                        <span class={`px-3 py-1 rounded-full text-xs font-bold border-2 shadow-sm ${getCategoryColor(article.data.category)}`}>
                          {article.data.category}
                        </span>
                        <span class="text-xs text-gray-400 font-medium">
                          {getTimeAgo(article.data.date)}
                        </span>
                      </div>
                      
                      <h3 class="text-lg font-bold text-gray-900 mb-3 leading-tight group-hover:text-green-600 transition-colors line-clamp-2">
                        {article.data.title}
                      </h3>
                      
                      <p class="text-gray-600 text-sm leading-relaxed mb-4 line-clamp-3">
                        {article.data.description}
                      </p>
                      
                      <div class="flex items-center justify-between text-xs text-gray-500">
                        <span class="font-medium">üë§ {article.data.author}</span>
                        <span class="bg-gradient-to-r from-yellow-500 to-yellow-600 text-white px-3 py-1 rounded-full font-bold shadow-md">
                          üïí {article.data.readingTime || 5}min
                        </span>
                      </div>
                    </div>
                  </article>
                </a>
              ))}
            </div>
          </section>
        )}

        {/* üîó PAGINACI√ìN MEJORADA CON COLORES VIBRANTES */}
        {totalPages > 1 && (
          <section class="mt-16">
            <div class="flex justify-center">
              <nav class="flex items-center space-x-2" aria-label="Paginaci√≥n">
                
                {/* P√°gina actual (siempre p√°gina 1 en index) */}
                <span class="px-5 py-3 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-lg text-sm font-bold shadow-lg">
                  1
                </span>
                
                {/* P√°ginas siguientes */}
                {Array.from({ length: Math.min(totalPages - 1, 4) }, (_, i) => i + 2).map(pageNum => (
                  <a 
                    href={`/articulos/page/${pageNum}`}
                    class="px-5 py-3 border-2 border-green-500 text-green-600 rounded-lg text-sm font-bold hover:bg-green-500 hover:text-white transition-all duration-200 shadow-md hover:shadow-lg hover:scale-105"
                    aria-label={`Ir a p√°gina ${pageNum}`}
                  >
                    {pageNum}
                  </a>
                ))}
                
                {/* Puntos suspensivos y √∫ltima p√°gina */}
                {totalPages > 5 && (
                  <>
                    <span class="px-2 text-gray-400 font-bold">...</span>
                    <a 
                      href={`/articulos/page/${totalPages}`}
                      class="px-5 py-3 border-2 border-green-500 text-green-600 rounded-lg text-sm font-bold hover:bg-green-500 hover:text-white transition-all duration-200 shadow-md hover:shadow-lg hover:scale-105"
                      aria-label={`Ir a √∫ltima p√°gina ${totalPages}`}
                    >
                      {totalPages}
                    </a>
                  </>
                )}
                
                {/* Bot√≥n Siguiente */}
                {totalPages > 1 && (
                  <a 
                    href="/articulos/page/2"
                    class="ml-3 px-6 py-3 bg-gradient-to-r from-yellow-500 to-yellow-600 text-white rounded-lg text-sm font-bold hover:from-yellow-600 hover:to-yellow-700 transition-all duration-200 shadow-lg hover:shadow-xl flex items-center gap-2 hover:scale-105"
                    aria-label="P√°gina siguiente"
                  >
                    <span>Siguiente</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                )}
              </nav>
            </div>
            
            {/* Informaci√≥n adicional */}
            <div class="text-center mt-6">
              <p class="text-sm text-gray-500 font-medium">
                Mostrando {Math.min(ARTICLES_PER_PAGE, allArticles.length)} de {allArticles.length} art√≠culos
              </p>
            </div>
          </section>
        )}

      </div>
    ) : (
      /* üìù ESTADO VAC√çO MEJORADO CON COLORES VIBRANTES */
      <section class="text-center py-20 bg-gradient-to-br from-green-50 to-yellow-50 rounded-2xl border-2 border-green-500 shadow-lg">
        <div class="w-32 h-32 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center mx-auto mb-8 shadow-lg">
          <span class="text-6xl">üìù</span>
        </div>
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          ¬°Bienvenido al Centro de Conocimiento de Balto!
        </h2>
        <p class="text-gray-600 mb-8 max-w-lg mx-auto text-lg">
          Pronto tendremos art√≠culos incre√≠bles sobre cuidado de mascotas. 
          Mientras tanto, explora otras secciones de Balto.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/comparador-razas" variant="primary" size="lg" class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-bold shadow-lg hover:shadow-xl transition-all">
            üîç Comparar Razas
          </Button>
          <Button href="/" variant="outline" size="lg" class="border-2 border-yellow-500 text-yellow-600 hover:bg-yellow-500 hover:text-white font-bold shadow-md hover:shadow-lg transition-all">
            üè† Volver al inicio
          </Button>
        </div>
      </section>
    )}
  </Container>

</BaseLayout>

<style>
  /* Clase para truncar texto */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Hover effects mejorados */
  article:hover {
    transform: translateY(-2px);
  }
  
  /* Animaciones suaves */
  * {
    transition-property: transform, box-shadow, border-color, background-color;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
  }
</style>