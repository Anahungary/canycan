// üìä CONFIGURACI√ìN DE PAGINACI√ìN
const ARTICLES_PER_PAGE = 9;

// Generar rutas din√°micas para la paginaci√≥n
export async function getStaticPaths() {
  // üîç CARGAR ART√çCULOS REALES DEL CMS
  let allArticles: any[] = [];
  try {
    allArticles = await getCollection('articulos');
    allArticles = allArticles
      .filter((article: any) => article.data.status === 'published')
      .sort((a: any, b: any) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
  } catch (error) {
    console.log('‚ö†Ô∏è No se pudieron cargar los art√≠culos:', error);
    allArticles = [];
  }

  // Si no hay art√≠culos suficientes, retorna array vac√≠o para evitar p√°ginas innecesarias
  if (allArticles.length <= ARTICLES_PER_PAGE) {
    return [];
  }

  // Calcular total de p√°ginas
  const totalPages = Math.ceil(allArticles.length / ARTICLES_PER_PAGE);
  
  // Crear rutas para cada p√°gina (empezando desde la p√°gina 2)
  const pages = Array.from({ length: Math.max(0, totalPages - 1) }, (_, i) => i + 2);
  
  return pages.map(pageNum => {
    const startIndex = (pageNum - 1) * ARTICLES_PER_PAGE;
    const endIndex = startIndex + ARTICLES_PER_PAGE;
    const pageArticles = allArticles.slice(startIndex, endIndex);
    
    return {
      params: { page: pageNum.toString() },
      props: { 
        page: pageNum,
        articles: pageArticles || [],
        totalPages: totalPages,
        allArticlesCount: allArticles.length
      }
    };
  });
}

const { page, articles = [], totalPages = 1, allArticlesCount = 0 } = Astro.props;

