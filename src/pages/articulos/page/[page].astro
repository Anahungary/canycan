  }

  // üìä CONFIGURACI√ìN DE PAGINACI√ìN
  const totalPages = Math.ceil(allArticles.length / ARTICLES_PER_PAGE);
  
  console.log(`üìä C√ÅLCULO DE PAGINACI√ìN:`);
  console.log(`üìä - Art√≠culos totales: ${allArticles.length}`);
  console.log(`üìä - Art√≠culos por p√°gina: ${ARTICLES_PER_PAGE}`);
  console.log(`üìä - Total p√°ginas: ${totalPages}`);
  console.log(`üìä - ¬øNecesita p√°gina 2?: ${allArticles.length > ARTICLES_PER_PAGE ? 'S√ç' : 'NO'}`);

  // ‚úÖ GENERAR P√ÅGINA 2 SI HAY M√ÅS DE 6 ART√çCULOS
  if (allArticles.length <= ARTICLES_PER_PAGE) {
    console.log('üìù Solo hay suficientes art√≠culos para 1 p√°gina, no se generan p√°ginas adicionales');
    return [];
  }

  // Crear rutas para cada p√°gina (empezando desde la p√°gina 2)
  const pages = Array.from({ length: Math.max(0, totalPages - 1) }, (_, i) => i + 2);
  console.log(`üîó Creando p√°ginas: ${pages.join(', ')}`);
  
  return pages.map(pageNum => {
    // ‚úÖ L√ìGICA: P√°gina 1 = art√≠culos 1-6, P√°gina 2 = art√≠culos 7-12
    const startIndex = (pageNum - 1) * ARTICLES_PER_PAGE;
    const endIndex = startIndex + ARTICLES_PER_PAGE;
    const pageArticles = allArticles.slice(startIndex, endIndex);
    
