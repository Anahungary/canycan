          <div class="text-gray-500">// KajÃº Admin Console iniciado</div>
        </div>
      </div>

      <!-- Articles List -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">ğŸ“‹ Estado de ArtÃ­culos</h3>
        <div 
          id="articles-list" 
          class="h-80 overflow-y-auto space-y-2"
