// üîç CARGAR TODOS LOS ART√çCULOS REALES QUE EXISTEN
let allArticles: any[] = [];
try {
  allArticles = await getCollection('articulos');
  // Filtrar solo art√≠culos publicados y ordenar por fecha
  allArticles = allArticles
    .filter((article: any) => article.data.status === 'published')
    .sort((a: any, b: any) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
} catch (error) {
  console.log('No se pudieron cargar los art√≠culos:', error);
  allArticles = [];
}

// Datos del hero principal
