];

// üìñ ART√çCULOS RECIENTES POR CATEGOR√çAS (de los art√≠culos reales)
const getArticlesByCategory = (category: string, limit = 2) => {
  return allArticles
    .filter((article: any) => 
      article.data.category?.toLowerCase().includes(category.toLowerCase()) ||
      article.data.tags?.some((tag: string) => tag.toLowerCase().includes(category.toLowerCase()))
    )
    .slice(0, limit);
};

const recentArticlesByCategory = {
  comportamiento: getArticlesByCategory('comportamiento'),
  entrenamiento: getArticlesByCategory('entrenamiento'),
  cuidado: getArticlesByCategory('cuidado'),
  nuevos_duenos: getArticlesByCategory('nuevos')
};

// Funci√≥n para formatear fecha
const formatDate = (date: string | Date) => {
  return new Date(date).toLocaleDateString('es-ES', {day: 'numeric', month: 'short'});
};

// Funci√≥n para obtener color de categor√≠a
const getCategoryColor = (category: string | undefined) => {
  const cat = category?.toLowerCase() || '';
  if (cat.includes('entrenamiento')) return 'bg-[#AFC2D5]/20 text-[#436280]';
  if (cat.includes('comportamiento')) return 'bg-[#F6B89E]/20 text-[#B25E42]';
  if (cat.includes('cuidado')) return 'bg-[#C8D6B9]/20 text-[#5A7251]';
  if (cat.includes('nuevos')) return 'bg-purple-100 text-purple-800';
  return 'bg-gray-100 text-gray-700';
};
