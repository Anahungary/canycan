    type: 'perro',
    description: 'Amigable, compacto y excelente con ni√±os',
    traits: { energy: 4, friendliness: 5, training: 3 }
  },
  {
    id: 'boston-terrier',
    name: 'Boston Terrier',
    image: '/images/breeds/boston_terrier.jpg',
    type: 'perro',
    description: 'Compa√±ero urbano inteligente y cari√±oso',
    traits: { energy: 3, friendliness: 4, training: 4 }
