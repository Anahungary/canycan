    const [trending, popular] = await Promise.all([
      ArticlesDB.getTrendingArticles(5),
      ArticlesDB.getPopularArticles(5)
    ]);
    
    sidebarData = { trending, popular };
    console.log(`üî• Sidebar: ${trending.length} trending, ${popular.length} popular`);
  } catch (sidebarError) {
    console.log('‚ö†Ô∏è Error cargando sidebar:', sidebarError);
  }

} catch (error) {
  console.error('‚ùå Error cargando desde Supabase:', error);
  
  // üîÑ FALLBACK: Usar solo art√≠culos del CMS
  articlesWithViews = cmsArticles.slice(0, ARTICLES_PER_PAGE).map((article, index) => ({
