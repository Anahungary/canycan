---
// src/pages/blog/index.astro - VERSIÓN CORREGIDA
import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/ui/Container.astro';
import ArticleList from '../../components/blog/ArticleList.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import Button from '../../components/ui/Button.astro';
import { Image } from 'astro:assets';

// 🔧 FUNCIÓN PARA MAPEAR STRINGS A VARIANTS VÁLIDOS
function getBadgeVariant(categoryName: string): 'default' | 'primary' | 'secondary' | 'success' | 'warning' | 'info' {
  const variantMap: Record<string, 'default' | 'primary' | 'secondary' | 'success' | 'warning' | 'info'> = {
    'entrenamiento': 'primary',
    'alimentacion': 'secondary', 
    'salud': 'success',
    'comportamiento': 'info',
    'cuidados': 'primary',
    'razas': 'secondary',
    'nuevos-duenos': 'success',
    'adopcion': 'info',
    'viajes': 'primary'
  };
  
  return variantMap[categoryName.toLowerCase()] || 'default';
}

// Simulación de datos (en producción vendrían de la API o CMS)
const latestArticles = [
  {
    id: 'entrenamiento-profesional-vs-casero',
    title: '¿Entrenamiento profesional o en casa? Pros y contras',
    excerpt: 'Analiza las ventajas y desventajas de cada opción para tomar la mejor decisión según las necesidades de tu mascota y tus circunstancias.',
    image: '/images/articles/professional-training.jpg',
    date: '2023-09-25',
    author: {
      name: 'Carlos Ruiz',
      avatar: '/images/authors/carlos-ruiz.jpg'
    },
    readingTime: 8,
    categories: ['Entrenamiento', 'Consejos'],
    featured: true
  },
  {
    id: 'comandos-basicos-perros',
    title: 'Los 5 comandos básicos que todo perro debería conocer',
    excerpt: 'Guía paso a paso para enseñar a tu perro los comandos fundamentales: sentado, quieto, ven, abajo y junto.',
    image: '/images/articles/basic-commands.jpg',
    date: '2023-09-20',
    author: {
      name: 'Carlos Ruiz',
      avatar: '/images/authors/carlos-ruiz.jpg'
    },
    readingTime: 7,
    categories: ['Entrenamiento', 'Perros']
  },
  {
    id: 'como-elegir-comida-perro',
    title: 'Cómo elegir la alimentación ideal para tu perro',
    excerpt: 'Guía completa para entender las necesidades nutricionales de tu perro según su edad, tamaño y actividad física.',
    image: '/images/articles/dog-food-guide.jpg',
    date: '2023-09-15',
    author: {
      name: 'María Gómez',
      avatar: '/images/authors/maria-gomez.jpg'
    },
    readingTime: 8,
    categories: ['Alimentación', 'Perros']
  },
  // ... más artículos
];

// 🔧 CATEGORÍAS CON VARIANTS TIPADOS
const categories = [
  { name: 'Entrenamiento', count: 24, variant: 'primary' as const },
  { name: 'Alimentación', count: 18, variant: 'secondary' as const },
  { name: 'Salud', count: 31, variant: 'success' as const },
  { name: 'Comportamiento', count: 27, variant: 'info' as const },
  { name: 'Cuidados', count: 22, variant: 'primary' as const },
  { name: 'Razas', count: 15, variant: 'secondary' as const },
  { name: 'Nuevos Dueños', count: 12, variant: 'success' as const },
  { name: 'Adopción', count: 9, variant: 'info' as const },
  { name: 'Viajes', count: 7, variant: 'primary' as const }
];

// Artículos destacados (por categoría)
const featuredByCategory = {
  perros: [
    {
      id: 'comandos-basicos-perros',
      title: 'Los 5 comandos básicos que todo perro debería conocer',
      image: '/images/articles/basic-commands.jpg',
      readingTime: 7
    },
    {
      id: 'como-elegir-comida-perro',
      title: 'Cómo elegir la alimentación ideal para tu perro',
      image: '/images/articles/dog-food-guide.jpg',
      readingTime: 8
    }
  ],
  gatos: [
    {
      id: 'problemas-comportamiento-gatos',
      title: '5 problemas de comportamiento comunes en gatos',
      image: '/images/articles/cat-behavior.jpg',
      readingTime: 6
    },
    {
      id: 'enriquecimiento-ambiental-felino',
      title: 'Enriquecimiento ambiental para gatos',
      image: '/images/articles/cat-enrichment.jpg',
      readingTime: 7
    }
  ]
};

const title = "Blog | Artículos sobre perros y gatos";
const description = "Descubre artículos, consejos y guías sobre cuidados, entrenamiento, alimentación y comportamiento para mejorar la vida de tus mascotas.";
---

<BaseLayout title={title} description={description}>
  {/* Hero */}
  <div class="bg-gradient-to-r from-[#AFC2D5] to-[#C8D6B9]">
    <Container>
      <div class="py-16 md:py-20 text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">Blog de PataDigital</h1>
        <p class="text-lg text-white text-opacity-90 max-w-2xl mx-auto mb-8">
          Artículos, consejos y guías escritos por expertos para mejorar la calidad de vida de tus mascotas
        </p>
        
        <div class="flex flex-wrap justify-center gap-3 max-w-2xl mx-auto">
          {categories.slice(0, 6).map(category => (
            <a 
              href={`/blog/categoria/${category.name.toLowerCase().replace(/\s+/g, '-')}`}
              class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-white bg-opacity-20 hover:bg-opacity-30 text-white transition-all duration-200"
            >
              {category.name}
            </a>
          ))}
        </div>
      </div>
    </Container>
  </div>
  
  {/* Artículos más recientes */}
  <Container class="py-12">
    <h2 class="text-2xl font-bold mb-8">Artículos Recientes</h2>
    
    <ArticleList 
      articles={latestArticles} 
      layout="featured" 
      columns={3}
    />
    
    {/* Paginación */}
    <div class="mt-10 flex justify-center">
      <nav class="flex items-center">
        <span class="px-4 py-2 mx-1 bg-[#AFC2D5] text-white rounded-md text-sm">1</span>
        <a 
          href="/blog/page/2" 
          class="px-4 py-2 mx-1 border border-gray-300 rounded-md text-sm text-gray-700 hover:bg-gray-50"
        >
          2
        </a>
        <a 
          href="/blog/page/3" 
          class="px-4 py-2 mx-1 border border-gray-300 rounded-md text-sm text-gray-700 hover:bg-gray-50"
        >
          3
        </a>
        <span class="px-2 text-gray-500">...</span>
        <a 
          href="/blog/page/2" 
          class="px-4 py-2 mx-1 border border-gray-300 rounded-md text-sm text-gray-700 hover:bg-gray-50"
        >
          Siguiente &raquo;
        </a>
      </nav>
    </div>
  </Container>
  
  {/* Sección de perros y gatos */}
  <div class="bg-gray-50 py-12">
    <Container>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {/* Sección de perros */}
        <div>
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-bold">Para perros</h2>
            <Button href="/blog/categoria/perros" variant="text">
              Ver más
            </Button>
          </div>
          
          <div class="space-y-4">
            {featuredByCategory.perros.map(article => (
              <a href={`/articulos/${article.id}`} class="flex group">
                <div class="flex-shrink-0 w-24 h-24 rounded-md overflow-hidden">
                  <Image 
                    src={article.image} 
                    alt={article.title}
                    width={96}
                    height={96}
                    class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  />
                </div>
                <div class="ml-4">
                  <h3 class="font-medium text-[#2E2E2E] group-hover:text-[#AFC2D5] transition-colors duration-200">
                    {article.title}
                  </h3>
                  <p class="text-xs text-gray-500 mt-1">{article.readingTime} min lectura</p>
                </div>
              </a>
            ))}
          </div>
        </div>
        
        {/* Sección de gatos */}
        <div>
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-bold">Para gatos</h2>
            <Button href="/blog/categoria/gatos" variant="text">
              Ver más
            </Button>
          </div>
          
          <div class="space-y-4">
            {featuredByCategory.gatos.map(article => (
              <a href={`/articulos/${article.id}`} class="flex group">
                <div class="flex-shrink-0 w-24 h-24 rounded-md overflow-hidden">
                  <Image 
                    src={article.image} 
                    alt={article.title}
                    width={96}
                    height={96}
                    class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  />
                </div>
                <div class="ml-4">
                  <h3 class="font-medium text-[#2E2E2E] group-hover:text-[#F6B89E] transition-colors duration-200">
                    {article.title}
                  </h3>
                  <p class="text-xs text-gray-500 mt-1">{article.readingTime} min lectura</p>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </Container>
  </div>
  
  {/* Sección de categorías y newsletter */}
  <Container class="py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {/* Categorías */}
      <div class="lg:col-span-2">
        <h2 class="text-2xl font-bold mb-6">Explora por categorías</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
          {categories.map(category => (
            <a 
              href={`/blog/categoria/${category.name.toLowerCase().replace(/\s+/g, '-')}`}
              class="bg-white rounded-lg border border-gray-200 p-4 hover:shadow-md transition-shadow duration-200"
            >
              <Badge variant={category.variant} size="md" class="mb-2">{category.count} artículos</Badge>
              <h3 class="font-bold">{category.name}</h3>
            </a>
          ))}
        </div>
      </div>
      
      {/* Newsletter */}
      <div class="lg:col-span-1">
        <Card variant="highlight" padding="md">
          <h2 class="text-xl font-bold mb-4">Suscríbete a nuestra newsletter</h2>
          <p class="text-gray-600 mb-6">
            Recibe en tu correo los mejores artículos y consejos para el cuidado de tus mascotas
          </p>
          
          <form class="space-y-3">
            <div>
              <label for="email" class="sr-only">Correo electrónico</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="Tu correo electrónico"
                class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#AFC2D5] focus:border-transparent"
              />
            </div>
            <div class="flex">
              <label class="flex items-start">
                <input 
                  type="checkbox" 
                  name="accept-terms" 
                  required
                  class="h-4 w-4 mt-1 rounded border-gray-300 text-[#AFC2D5] focus:ring-[#AFC2D5]" 
                />
                <span class="ml-2 text-xs text-gray-500">
                  Acepto recibir correos y la política de privacidad
                </span>
              </label>
            </div>
            <button
              type="submit"
              class="w-full bg-[#AFC2D5] hover:bg-[#9DB3C6] text-white py-2 px-4 rounded-md text-sm font-medium transition-colors duration-200"
            >
              Suscribirme
            </button>
          </form>
        </Card>
      </div>
    </div>
  </Container>
</BaseLayout>