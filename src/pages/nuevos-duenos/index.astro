---
// src/pages/nuevos-duenos/index.astro - SOLO CMS
import { getCollection } from 'astro:content';
import CategoryLayout from '../../layouts/CategoryLayout.astro';

// Obtener datos del CMS
const todosLosArticulos = await getCollection('articulos');
const todasLasCategorias = await getCollection('categorias');
const todasLasEtiquetas = await getCollection('etiquetas');

// Filtrar artículos para nuevos dueños
const articles = todosLosArticulos
  .filter(articulo => {
    const categoria = articulo.data.category;
    const etiquetas = articulo.data.tags || [];
    
    return categoria === 'nuevos-duenos' || 
           etiquetas.includes('nuevos-duenos') ||
           etiquetas.includes('new-owners') ||
           etiquetas.includes('primera-mascota') ||
           etiquetas.includes('adopcion') ||
           etiquetas.includes('cachorros') ||
           etiquetas.includes('preparativos') ||
           etiquetas.includes('checklist');
  })
  .map(articulo => ({
    id: articulo.slug,
    title: articulo.data.title,
    excerpt: articulo.data.description || articulo.data.excerpt,
    image: articulo.data.image || '/images/articles/default.jpg',
    date: articulo.data.date.toISOString().split('T')[0],
    author: {
      name: articulo.data.author || 'Editor PataDigital',
      avatar: '/images/authors/default.jpg'
    },
    readingTime: articulo.data.readingTime || 5,
    categories: [articulo.data.category, ...(articulo.data.tags || [])].filter(Boolean)
  }));

// Obtener datos de categoría del CMS
const categoriaNuevosDuenos = todasLasCategorias.find(cat => cat.slug === 'nuevos-duenos');

// Artículo destacado (el más reciente)
const featuredArticle = articles
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())[0];

// Obtener etiquetas relacionadas con nuevos dueños
const popularTags = todasLasEtiquetas
  .filter(tag => {
    const relatedCategories = tag.data.categories || [];
    return relatedCategories.includes('nuevos-duenos');
  })
  .map(tag => tag.data.name);

// Subcategorías dinámicas basadas en etiquetas
const subcategories = todasLasEtiquetas
  .filter(tag => {
    const relatedCategories = tag.data.categories || [];
    return relatedCategories.includes('nuevos-duenos');
  })
  .map(tag => tag.data.name);

const title = categoriaNuevosDuenos?.data.name || "Nuevos Dueños";
const description = categoriaNuevosDuenos?.data.description || "¿Tu primera mascota? Encuentra toda la información que necesitas para ser un dueño responsable desde el primer día.";
const image = categoriaNuevosDuenos?.data.image || "/images/categories/new-owners-banner.jpg";
---

<CategoryLayout
  title={title}
  description={description}
  image={image}
  category="nuevos-duenos"
  subcategories={subcategories}
  articles={articles}
  popularTags={popularTags}
  featuredArticle={featuredArticle}
/>