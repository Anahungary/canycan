---
// ArticleLayout.astro - VERSIÓN FINAL LIMPIA SIN TOC
import BaseLayout from './BaseLayout.astro';
import ArticleMeta from '../components/blog/ArticleMeta.astro';
import ShareButtons from '../components/blog/ShareButtons.astro';
import Container from '../components/ui/Container.astro';
import Card from '../components/ui/Card.astro';
import { Image } from 'astro:assets';
import '../styles/article.css';


interface Author {
  name: string;
  avatar?: string;
  bio?: string;
}

interface Props {
  title: string;
  description: string;
  image: string;
  author: Author;
  date: string;
  readingTime: number;
  categories: string[];
  views?: number;
  relatedArticles?: any[];
  popularArticles?: any[];
}

const { 
  title, 
  description, 
  image, 
  author, 
  date, 
  readingTime, 
  categories,
  views,
  relatedArticles = [],
  popularArticles = []
} = Astro.props;

const currentUrl = Astro.url.pathname;
---

<BaseLayout 
  title={title}
  description={description}
  ogImage={image}
  canonicalUrl={currentUrl}
  bodyClass="article-page"
>
 

  <!-- HEADER DEL ARTÍCULO -->
  <div class="article-header py-12 md:py-20">
    <Container size="lg">
      <div class="max-w-4xl mx-auto">
        <!-- Categorías -->
        <div class="article-badges mb-6">
          {categories.map(category => (
            <a href={`/categorias/${category.toLowerCase()}`} class="badge badge-category">
              {category}
            </a>
          ))}
          <span class="badge badge-reading-time">
            {readingTime} min lectura
          </span>
        </div>

        <!-- Título principal -->
        <h1 class="article-title">{title}</h1>
        
        <!-- Subtítulo/Descripción -->
        <p class="article-subtitle">{description}</p>

        <!-- Metadata mejorada -->
        <div class="article-meta-enhanced">
          <div class="author-info">
            {author.avatar ? (
              <Image 
                src={author.avatar} 
                alt={author.name}
                width={40}
                height={40}
                class="author-avatar"
              />
            ) : (
              <div class="author-avatar bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white text-sm font-bold">
                {author.name.charAt(0)}
              </div>
            )}
            <div class="author-details">
              <h4>{author.name}</h4>
              <p>{new Date(date).toLocaleDateString('es-ES', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}</p>
            </div>
          </div>

          {views && (
            <div class="text-sm text-gray-600">
              {views.toLocaleString()} visualizaciones
            </div>
          )}

          <!-- Botones de compartir horizontal -->
          <ShareButtons 
            url={currentUrl} 
            title={title} 
            vertical={false} 
            showLabel={false}
          />
        </div>
      </div>
    </Container>
  </div>
  
  <Container size="lg" class="py-8">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
      <!-- Contenido principal -->
      <article class="lg:col-span-9">
        <!-- Imagen principal -->
        <div class="article-hero-image">
          <Image 
            src={image} 
            alt={title}
            width={1200}
            height={675}
            class="w-full h-auto"
          />
        </div>
        
        <!-- Contenido del artículo -->
        <div class="article-content">
          <slot />
        </div>
        
        <!-- Autor destacado -->
        <div class="author-spotlight">
          <div class="flex flex-col sm:flex-row items-start sm:items-center gap-6">
            {author.avatar ? (
              <Image 
                src={author.avatar} 
                alt={author.name}
                width={100}
                height={100}
                class="w-20 h-20 rounded-full border-4 border-white shadow-lg"
              />
            ) : (
              <div class="w-20 h-20 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white text-2xl font-bold border-4 border-white shadow-lg">
                {author.name.charAt(0)}
              </div>
            )}
            <div class="flex-1">
              <h3 class="text-xl font-bold text-gray-900 mb-2">{author.name}</h3>
              {author.bio && (
                <p class="text-gray-600 leading-relaxed">{author.bio}</p>
              )}
              <div class="mt-4">
                <ShareButtons 
                  url={currentUrl} 
                  title={`Artículo de ${author.name}: ${title}`} 
                  vertical={false} 
                  showLabel={true}
                />
              </div>
            </div>
          </div>
        </div>
      </article>
      
      <!-- Sidebar -->
      <div class="lg:col-span-3">
        <div class="sidebar-sticky">
          <!-- Artículos populares -->
                    <div class="sidebar-card">
            <h3 class="text-lg font-bold mb-4 text-gray-900">Más leídos</h3>
            <div class="space-y-4">
              {popularArticles && popularArticles.length > 0 ? (
                popularArticles.slice(0, 5).map((article, index) => (
                  <div class="flex items-start space-x-3 group">
                    <div class="flex-shrink-0 w-8 h-8 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-sm font-bold">
                      {index + 1}
                    </div>
                    <div class="flex-1 min-w-0">
                      <a 
                        href={`/articulos/${article.slug || article.id}`}
                        class="block text-sm font-medium text-gray-900 group-hover:text-blue-600 transition-colors line-clamp-2"
                      >
                        {article.title}
                      </a>
                      <p class="text-xs text-gray-500 mt-1">
                        {article.readingTime || 5} min • {article.category}
                      </p>
                    </div>
                  </div>
                ))
              ) : (
                <div class="text-center py-4">
                  <p class="text-sm text-gray-500 mb-3">Cargando artículos populares...</p>
                  <div class="animate-pulse space-y-2">
                    <div class="h-4 bg-gray-200 rounded w-3/4"></div>
                    <div class="h-4 bg-gray-200 rounded w-1/2"></div>
                    <div class="h-4 bg-gray-200 rounded w-2/3"></div>
                  </div>
                </div>
              )}
            </div>
          </div>
          
          <!-- Artículos relacionados -->
          {relatedArticles.length > 0 && (
            <div class="sidebar-card">
              <h3 class="text-lg font-bold mb-4 text-gray-900">Artículos relacionados</h3>
              <div class="space-y-4">
                {relatedArticles.map(article => (
                  <div class="flex items-start space-x-3 group">
                    <a href={`/articulos/${article.id}`} class="flex-shrink-0">
                      <Image 
                        src={article.image} 
                        alt={article.title}
                        width={80}
                        height={60}
                        class="w-20 h-16 object-cover rounded-lg"
                      />
                    </a>
                    <div class="flex-1 min-w-0">
                      <a 
                        href={`/articulos/${article.id}`} 
                        class="block text-sm font-medium text-gray-900 group-hover:text-blue-600 transition-colors line-clamp-2"
                      >
                        {article.title}
                      </a>
                      <p class="text-xs text-gray-500 mt-1">
                        {article.readingTime} min lectura
                      </p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </Container>

  <script>
    // Script limpio sin errores TypeScript
    document.addEventListener('DOMContentLoaded', () => {
      
      // Progress bar de lectura
      function createReadingProgress() {
        const progressBar = document.createElement('div');
        progressBar.className = 'reading-progress';
        progressBar.innerHTML = '<div class="reading-progress-bar"></div>';
        document.body.appendChild(progressBar);
        
        function updateProgress() {
          const scrolled = window.scrollY;
          const maxScroll = document.documentElement.scrollHeight - window.innerHeight;
          const progress = (scrolled / maxScroll) * 100;
          
          const progressBarElement = document.querySelector('.reading-progress-bar') as HTMLElement;
          if (progressBarElement) {
            progressBarElement.style.width = `${Math.min(100, Math.max(0, progress))}%`;
          }
        }
        
        window.addEventListener('scroll', updateProgress);
        updateProgress();
      }
      
      // Mejoras de lectura
      const articleContentEl = document.querySelector('.article-content');
      if (articleContentEl) {
        // Mejorar enlaces externos
        const externalLinks = articleContentEl.querySelectorAll('a[href^="http"]') as NodeListOf<HTMLAnchorElement>;
        externalLinks.forEach(link => {
          link.setAttribute('target', '_blank');
          link.setAttribute('rel', 'noopener noreferrer');
        });
        
        // Lazy loading para imágenes
        const images = articleContentEl.querySelectorAll('img') as NodeListOf<HTMLImageElement>;
        images.forEach(img => {
          img.loading = 'lazy';
        });
      }
      
      createReadingProgress();
      
      // Añadir indicador de scroll suave
      document.documentElement.style.scrollBehavior = 'smooth';
      
      console.log('✅ ArticleLayout cargado correctamente');
    });
  </script>
</BaseLayout>