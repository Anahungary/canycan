              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ slug: slug })
            });
            
            const result = await response.json();
            
            if (result.success) {
              console.log(`‚úÖ Vista trackeada: "${result.title}" - ${result.views} views`);
              sessionStorage.setItem(viewedKey, 'true');
              
