  if (!rating) return '‚òÜ‚òÜ‚òÜ‚òÜ‚òÜ';
  return '‚òÖ'.repeat(rating) + '‚òÜ'.repeat(5 - rating);
};

const getSizeText = (size: string) => {
  switch(size) {
    case 'small': return 'Peque√±o';
    case 'medium': return 'Mediano';
    case 'large': return 'Grande';
    default: return 'Mediano';
