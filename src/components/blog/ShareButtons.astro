  const baseUrl = import.meta.env.SITE || import.meta.env.PUBLIC_SITE_URL || 'https://canicat.netlify.app';
  return `${baseUrl}${relativeUrl.startsWith('/') ? '' : '/'}${relativeUrl}`;
};

