---
// src/components/blog/ArticleCard.astro - Versión mejorada
import { Image } from 'astro:assets';
import Badge from '../ui/Badge.astro';
import Button from '../ui/Button.astro';

interface Props {
  id: string;
  title: string;
  excerpt: string;
  image: string;
  author?: {
    name: string;
    avatar?: string;
  };
  date?: string;
  readingTime?: number;
  categories?: string[];
  category?: string; // Versión simplificada para destacados
  featured?: boolean;
  variant?: 'default' | 'compact' | 'overlay' | 'horizontal';
}

const { 
  id, 
  title, 
  excerpt, 
  image, 
  author, 
  date, 
  readingTime, 
  categories = [],
  category,
  featured = false,
  variant = 'default'
} = Astro.props;

// Formatear fecha
const formatDate = (dateString: string) => {
  if (!dateString) return '';
  const options: Intl.DateTimeFormatOptions = { year: 'numeric', month: 'long', day: 'numeric' };
  return new Date(dateString).toLocaleDateString('es-ES', options);
};

// Truncar texto
const truncate = (text: string, length: number) => {
  if (!text || text.length <= length) return text || '';
  return text.slice(0, length) + '...';
};

// Preparar categorías
const allCategories = category ? [category, ...categories] : categories;

// Determinar clases según variante
let cardClasses = 'group relative transition-all duration-300 ';
let imageContainerClasses = 'relative overflow-hidden ';
let contentClasses = '';
let titleClasses = 'font-bold text-[#] group-hover:text-[#AFC2D5] transition-colors duration-200 ';

if (variant === 'default') {
  cardClasses += featured ? 'border-2 border-[#AFC2D5] rounded-lg shadow-sm hover:shadow-md' : 'border border-gray-200 rounded-lg shadow-sm hover:shadow-md';
  imageContainerClasses += 'h-48 rounded-t-lg';
  contentClasses = 'p-5';
  titleClasses += 'text-xl mb-2';
} else if (variant === 'compact') {
  cardClasses += 'border border-gray-200 rounded-lg shadow-sm hover:shadow-md';
  imageContainerClasses += 'h-36 rounded-t-lg';
  contentClasses = 'p-4';
  titleClasses += 'text-base mb-1';
} else if (variant === 'overlay') {
  cardClasses += 'rounded-lg overflow-hidden';
  imageContainerClasses += featured ? 'h-96' : 'h-64';
  contentClasses = 'absolute inset-0 flex flex-col justify-end bg-gradient-to-t from-black to-transparent p-5 text-white';
  titleClasses = 'font-bold text-white group-hover:text-[#AFC2D5] transition-colors duration-200 ' + (featured ? 'text-2xl' : 'text-xl') + ' mb-2';
} else if (variant === 'horizontal') {
  cardClasses += 'flex border border-gray-200 rounded-lg shadow-sm hover:shadow-md overflow-hidden';
  imageContainerClasses += 'h-full w-1/3 flex-shrink-0';
  contentClasses = 'p-4 flex-1';
  titleClasses += 'text-lg mb-2';
}
---

<article class={cardClasses}>
  {featured && variant !== 'overlay' && (
    <div class="absolute top-3 right-3 z-10">
      <Badge variant="primary">Destacado</Badge>
    </div>
  )}
  
  <div class={imageContainerClasses}>
    <Image 
      src={image} 
      alt={title}
      width={800}
      height={450}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
    />
    
    {variant === 'overlay' && featured && (
      <div class="absolute top-3 right-3 z-10">
        <Badge variant="primary">Destacado</Badge>
      </div>
    )}
  </div>
  
  <div class={contentClasses}>
    {allCategories.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-3">
        {allCategories.slice(0, 2).map((cat) => (
          <Badge variant={variant === 'overlay' ? 'info' : 'primary'} size="sm">{cat}</Badge>
        ))}
        {allCategories.length > 2 && (
          <Badge variant={variant === 'overlay' ? 'info' : 'secondary'} size="sm">+{allCategories.length - 2}</Badge>
        )}
      </div>
    )}
    
    <h3 class={titleClasses}>
      <a href={`/articulos/${id}`} class="hover:text-[#AFC2D5]">
        {truncate(title, variant === 'compact' ? 60 : 100)}
      </a>
    </h3>
    
    {variant !== 'compact' && (
      <p class={`${variant === 'overlay' ? 'text-gray-200' : 'text-gray-600'} mb-4 text-sm`}>
        {truncate(excerpt, variant === 'horizontal' ? 100 : 120)}
      </p>
    )}
    
    {(author || date || readingTime) && variant !== 'compact' && (
      <div class="flex items-center justify-between mt-4">
        {author && (
          <div class="flex items-center space-x-2">
            {author.avatar ? (
              <Image 
                src={author.avatar} 
                alt={author.name}
                width={32}
                height={32}
                class="w-8 h-8 rounded-full"
              />
            ) : (
              <div class="w-8 h-8 rounded-full bg-[#AFC2D5] flex items-center justify-center text-white text-sm font-bold">
                {author.name.charAt(0)}
              </div>
            )}
            <div>
              <span class={`text-xs ${variant === 'overlay' ? 'text-gray-300' : 'text-gray-600'}`}>Por </span>
              <span class={`text-xs font-medium ${variant === 'overlay' ? 'text-white' : 'text-[#]'}`}>{author.name}</span>
            </div>
          </div>
        )}
        
        {(date || readingTime) && (
          <div class={`text-xs ${variant === 'overlay' ? 'text-gray-300' : 'text-gray-500'}`}>
            {date && <span>{formatDate(date)}</span>}
            {date && readingTime && <span class="mx-1">·</span>}
            {readingTime && <span>{readingTime} min lectura</span>}
          </div>
        )}
      </div>
    )}
    
    {variant === 'overlay' && (
      <div class="mt-3">
        <Button href={`/articulos/${id}`} variant="primary" size="sm" class="bg-white text-[#] hover:bg-gray-100">
          Leer artículo
        </Button>
      </div>
    )}
  </div>
</article>