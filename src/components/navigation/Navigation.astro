<script>
  // ✅ FUNCIONES CON VERIFICACIONES DE NULL CORRECTAS
  function toggleMobileMenu(): void {
    const menu = document.getElementById('mobile-menu');
    // ✅ Verificación de null antes de usar el elemento
    if (menu) {
      menu.classList.toggle('hidden');
    }
  }

  function openSearch(): void {
    // Implementar modal de búsqueda
    console.log('Abrir búsqueda');
  }

  // ✅ MANEJO CORRECTO DE EVENTOS CON VERIFICACIONES DE TIPO
  document.addEventListener('click', function(event: Event): void {
    const menu = document.getElementById('mobile-menu');
    
    // ✅ Verificación de null para menu
    if (!menu) return;
    
    // ✅ Verificación de null y casting correcto para event.target
    if (!event.target) return;
    
    // ✅ Verificar que event.target sea un Element antes de usar closest
    const target = event.target as Element;
    const button = target.closest('button');
    
    // ✅ Verificación adicional antes de usar contains
    if (!button && !menu.contains(target)) {
      menu.classList.add('hidden');
    }
  });

  // ✅ ASEGURAR QUE LAS FUNCIONES ESTÉN DISPONIBLES GLOBALMENTE
  (window as any).toggleMobileMenu = toggleMobileMenu;
  (window as any).openSearch = openSearch;
</script>