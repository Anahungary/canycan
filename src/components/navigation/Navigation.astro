<script>
  // ‚úÖ FUNCIONES CON VERIFICACIONES DE NULL CORRECTAS
  function toggleMobileMenu(): void {
    const menu = document.getElementById('mobile-menu');
    // ‚úÖ Verificaci√≥n de null antes de usar el elemento
    if (menu) {
      menu.classList.toggle('hidden');
    }
  }

  function openSearch(): void {
    // Implementar modal de b√∫squeda
    console.log('Abrir b√∫squeda');
  }

  // ‚úÖ MANEJO CORRECTO DE EVENTOS CON VERIFICACIONES DE TIPO
  document.addEventListener('click', function(event: Event): void {
    const menu = document.getElementById('mobile-menu');
    
    // ‚úÖ Verificaci√≥n de null para menu
    if (!menu) return;
    
    // ‚úÖ Verificaci√≥n de null y casting correcto para event.target
    if (!event.target) return;
    
    // ‚úÖ Verificar que event.target sea un Element antes de usar closest
    const target = event.target as Element;
    const button = target.closest('button');
    
    // ‚úÖ Verificaci√≥n adicional antes de usar contains
    if (!button && !menu.contains(target)) {
      menu.classList.add('hidden');
    }
  });

  // ‚úÖ ASEGURAR QUE LAS FUNCIONES EST√âN DISPONIBLES GLOBALMENTE
  (window as any).toggleMobileMenu = toggleMobileMenu;
  (window as any).openSearch = openSearch;
</script>